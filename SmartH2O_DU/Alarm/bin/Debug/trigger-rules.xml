<?xml version="1.0" encoding="utf-8" ?>
<triggers>
  <sensor node="PH" active="true">
    <alarm active="true">
      <condition>equals</condition>
      <value>8</value>
      <error-message>PH equals 6</error-message>
    </alarm>
    <alarm active="true">
      <condition>less than</condition>
      <value>12</value>
      <error-message>PH less than 12</error-message>
    </alarm>
    <alarm active="true">
      <condition>between</condition>
      <valueMin>7</valueMin>
      <valueMax>8</valueMax>
      <error-message>PH between 7 and 8</error-message>
    </alarm>
  </sensor>
  <sensor node="CI2" active="true">
    <alarm active="true">
      <condition>greater than</condition>
      <value>6,5</value>
      <error-message>CI2 greater than 6,5</error-message>
    </alarm>
    <alarm active="true">
      <condition>between</condition>
      <valueMin>1</valueMin>
      <valueMax>10</valueMax>
      <error-message>CI2 between 1 and 10</error-message>
    </alarm>
  </sensor>
  <sensor node="NH3" active="true">
    <alarm active="true">
      <condition>greater than</condition>
      <value>0,65</value>
      <error-message>NH3 greater than 0,65</error-message>
    </alarm>
    <alarm active="true">
      <condition>between</condition>
      <valueMin>0,3</valueMin>
      <valueMax>1</valueMax>
      <error-message>NH3 between 0,3 and 1</error-message>
    </alarm>
  </sensor>
</triggers>
