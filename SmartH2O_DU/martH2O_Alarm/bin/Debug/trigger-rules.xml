<?xml version="1.0" encoding="utf-8" ?>
<triggers>
  <sensor node="PH">
    <alarm active="true">
      <condition>equals</condition>
      <value>8</value>
      <error-message>PH equals 6</error-message>
    </alarm>
    <alarm active="true">
      <condition>less than</condition>
      <value>6</value>
      <error-message>PH less than 6</error-message>
    </alarm>
    <alarm active="true">
      <condition>between</condition>
      <valueMin>7</valueMin>
      <valueMax>8</valueMax>
      <error-message>PH between 7 and 8</error-message>
    </alarm>
  </sensor>
  <sensor node="NH3">
    <alarm active="true">
      <condition>greater than</condition>
      <value>10</value>
      <error-message>NH3 greater than 10</error-message>
    </alarm>
    <alarm active="true">
      <condition>between</condition>
      <valueMin>5</valueMin>
      <valueMax>9</valueMax>
      <error-message>NH3 between 5 and 9</error-message>
    </alarm>
  </sensor>
</triggers>
